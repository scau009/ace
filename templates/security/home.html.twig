{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    {% if app.user %}
        {# Logged In User View #}
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            {# Header Section #}
            <div class="bg-gradient-to-r from-blue-600 to-blue-800 px-6 py-12 text-white">
                <h1 class="text-4xl font-bold mb-2">Welcome back, {{ app.user.username }}!</h1>
                <p class="text-blue-100 text-lg">We're glad to see you again</p>
            </div>

            {# User Info Section #}
            <div class="px-6 py-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {# Profile Card #}
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                            <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Profile Information
                        </h2>
                        <div class="space-y-3">
                            <div>
                                <p class="text-sm text-gray-600">Username</p>
                                <p class="text-lg font-medium text-gray-900">{{ app.user.username }}</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">Email Address</p>
                                <p class="text-lg font-medium text-gray-900">{{ app.user.email }}</p>
                            </div>
                        </div>
                    </div>

                    {# Account Details Card #}
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                            <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Account Details
                        </h2>
                        <div class="space-y-3">
                            <div>
                                <p class="text-sm text-gray-600">Member Since</p>
                                <p class="text-lg font-medium text-gray-900">{{ app.user.createdAt|date('F j, Y') }}</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">Account Status</p>
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                    <span class="w-2 h-2 mr-2 bg-green-500 rounded-full"></span>
                                    Active
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                {# Actions #}
                <div class="mt-8 flex justify-center">
                    <a href="{{ path('app_logout') }}" class="btn-secondary inline-flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                        Sign Out
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        {# Guest View #}
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            {# Hero Section #}
            <div class="bg-gradient-to-r from-blue-600 to-blue-800 px-6 py-16 text-center text-white">
                <h1 class="text-5xl font-bold mb-4">Welcome to ACE App</h1>
                <p class="text-xl text-blue-100 max-w-2xl mx-auto">
                    Your ultimate platform for managing and organizing your projects efficiently
                </p>
            </div>

            {# Features Section #}
            <div class="px-6 py-12">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
                    {# Feature 1 #}
                    <div class="text-center">
                        <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Fast & Efficient</h3>
                        <p class="text-gray-600">Lightning-fast performance with optimized workflows</p>
                    </div>

                    {# Feature 2 #}
                    <div class="text-center">
                        <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Secure</h3>
                        <p class="text-gray-600">Enterprise-grade security for your data</p>
                    </div>

                    {# Feature 3 #}
                    <div class="text-center">
                        <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Customizable</h3>
                        <p class="text-gray-600">Tailor the experience to your needs</p>
                    </div>
                </div>

                {# Call to Action #}
                <div class="text-center bg-gray-50 rounded-lg p-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Get Started Today</h2>
                    <p class="text-gray-600 mb-6">Join thousands of users already using ACE App</p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a href="{{ path('app_register') }}" class="btn-primary inline-flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                            </svg>
                            Create Account
                        </a>
                        <a href="{{ path('app_login') }}" class="btn-secondary inline-flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                            </svg>
                            Sign In
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}