{% extends 'dashboard_base.html.twig' %}

{% block title %}Tracking Order Detail{% endblock %}
{% block page_title %}Order #{{ order.orderNo }}{% endblock %}

{% block body %}
    {# Order Header #}
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
        <div class="flex items-center justify-between mb-6">
            <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-2">Order Details</h2>
                <p class="text-gray-600">Track your shipment in real-time</p>
            </div>
            <a href="{{ path('app_home') }}" class="text-blue-600 hover:text-blue-700 font-medium flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Dashboard
            </a>
        </div>

        {# Tracking Number Section #}
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-blue-800 font-medium mb-1">Tracking Number</p>
                    <p class="text-xl font-bold text-blue-900">{{ order.trackingNumber }}</p>
                </div>
                <div class="text-right">
                    <p class="text-sm text-blue-800 font-medium mb-1">Carrier</p>
                    <p class="text-lg font-semibold text-blue-900">{{ order.carrierName }}</p>
                </div>
            </div>
        </div>

        {# Order Information Grid #}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
                <p class="text-sm text-gray-600 mb-1">Order Number</p>
                <p class="text-base font-medium text-gray-900">{{ order.orderNo }}</p>
            </div>
            <div>
                <p class="text-sm text-gray-600 mb-1">Status</p>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                    {% if order.status == 0 %}bg-yellow-100 text-yellow-800
                    {% elseif order.status == 1 %}bg-blue-100 text-blue-800
                    {% elseif order.status == 2 %}bg-green-100 text-green-800
                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                    <span class="w-2 h-2 mr-2 rounded-full
                        {% if order.status == 0 %}bg-yellow-500
                        {% elseif order.status == 1 %}bg-blue-500
                        {% elseif order.status == 2 %}bg-green-500
                        {% else %}bg-gray-500{% endif %}"></span>
                    {% if order.status == 0 %}Pending
                    {% elseif order.status == 1 %}In Transit
                    {% elseif order.status == 2 %}Delivered
                    {% else %}Unknown{% endif %}
                </span>
            </div>
            <div>
                <p class="text-sm text-gray-600 mb-1">Created At</p>
                <p class="text-base font-medium text-gray-900">{{ order.createdAt|date('M d, Y H:i') }}</p>
            </div>
        </div>
    </div>

    {# Tracking Timeline #}
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">Tracking History</h3>

        <div class="relative">
            {# Vertical line #}
            <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-200"></div>

            {# Timeline items #}
            <div class="space-y-6">
                {# Sample tracking event 1 #}
                <div class="relative flex items-start pl-10">
                    <div class="absolute left-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="font-medium text-gray-900">Package created</p>
                            <p class="text-sm text-gray-600 mt-1">Your tracking order has been created successfully</p>
                            <p class="text-xs text-gray-500 mt-2">{{ order.createdAt|date('M d, Y H:i') }}</p>
                        </div>
                    </div>
                </div>

                {% if order.lastTrackedAt %}
                <div class="relative flex items-start pl-10">
                    <div class="absolute left-0 w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="font-medium text-gray-900">Last tracked</p>
                            <p class="text-sm text-gray-600 mt-1">Package information last updated</p>
                            <p class="text-xs text-gray-500 mt-2">{{ order.lastTrackedAt|date('M d, Y H:i') }}</p>
                        </div>
                    </div>
                </div>
                {% endif %}

                {# Placeholder for no tracking data #}
                <div class="relative flex items-start pl-10">
                    <div class="absolute left-0 w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <div class="bg-gray-50 rounded-lg p-4 border-2 border-dashed border-gray-300">
                            <p class="font-medium text-gray-600">Waiting for tracking updates...</p>
                            <p class="text-sm text-gray-500 mt-1">We're waiting for the carrier to provide tracking information</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Additional Information #}
    <div class="bg-white rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Additional Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <p class="text-sm text-gray-600 mb-1">Carrier Code</p>
                <p class="text-base font-medium text-gray-900">{{ order.carrierCode }}</p>
            </div>
            {% if order.agentCode %}
            <div>
                <p class="text-sm text-gray-600 mb-1">Agent Code</p>
                <p class="text-base font-medium text-gray-900">{{ order.agentCode }}</p>
            </div>
            {% endif %}
            {% if order.agentOrderNo %}
            <div>
                <p class="text-sm text-gray-600 mb-1">Agent Order Number</p>
                <p class="text-base font-medium text-gray-900">{{ order.agentOrderNo }}</p>
            </div>
            {% endif %}
            <div>
                <p class="text-sm text-gray-600 mb-1">Last Updated</p>
                <p class="text-base font-medium text-gray-900">{{ order.updatedAt|date('M d, Y H:i') }}</p>
            </div>
        </div>
    </div>
{% endblock %}