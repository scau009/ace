{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Create your account
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Join us today and get started
            </p>
        </div>

        {{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            <div class="space-y-4">
                {# Username Field #}
                <div>
                    {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(registrationForm.username, {
                        'attr': {
                            'class': 'input-field',
                            'placeholder': 'Enter your username'
                        }
                    }) }}
                    {{ form_errors(registrationForm.username, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
                </div>

                {# Email Field #}
                <div>
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'input-field',
                            'placeholder': 'Enter your email'
                        }
                    }) }}
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
                </div>

                {# Password Field #}
                <div>
                    {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(registrationForm.plainPassword.first, {
                        'attr': {
                            'class': 'input-field',
                            'placeholder': 'Enter password'
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword.first, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
                </div>

                {# Confirm Password Field #}
                <div>
                    {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(registrationForm.plainPassword.second, {
                        'attr': {
                            'class': 'input-field',
                            'placeholder': 'Repeat password'
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword.second, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
                </div>
            </div>

            <div>
                <button type="submit" class="w-full btn-primary">
                    Register
                </button>
            </div>
        {{ form_end(registrationForm) }}

        <div class="text-center mt-4">
            <p class="text-sm text-gray-600">
                Already have an account?
                <a href="{{ path('app_login') }}" class="font-medium text-blue-600 hover:text-blue-500 transition duration-200">
                    Login here
                </a>
            </p>
        </div>
    </div>
</div>
{% endblock %}